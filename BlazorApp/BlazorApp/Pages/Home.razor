@page "/"
@inject IRevitService revitService

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

<p>@message</p>

@code {
    private string message = "";

    protected override async void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            var document = await revitService.GetActiveDocumentAsync();
            message = $"Active document title: {document.Title}";
            StateHasChanged();
        }
    }
}